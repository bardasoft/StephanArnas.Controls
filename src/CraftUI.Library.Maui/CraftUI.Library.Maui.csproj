        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Popups\CfCollectionMultiSelectionPopup.xaml.cs">
        <DependentUpon>CfCollectionMultiSelectionPopup.xaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Popups\CfCollectionSingleSelectionPopup.xaml.cs">
        <DependentUpon>CfCollectionSingleSelectionPopup.xaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
    </ItemGroup>

</Project>
