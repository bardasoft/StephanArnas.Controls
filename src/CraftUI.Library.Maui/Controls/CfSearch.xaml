<?xml version="1.0" encoding="utf-8"?>

<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CraftUI.Library.Maui.Controls.CfSearch"
    ColumnDefinitions="Auto,*,Auto"
    ColumnSpacing="16"
    Padding="16,4"
    BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
    x:Name="CfSearchRoot">

    <Image 
        Source="search.png">
        <Image.GestureRecognizers>
            <TapGestureRecognizer 
                Tapped="SearchImage_OnTapped"/>
        </Image.GestureRecognizers>
    </Image>

    <Entry 
        Grid.Column="1"
        x:Name="SearchEntry"
        Placeholder="{Binding Placeholder, Source={x:Reference CfSearchRoot}}"
        Text="{Binding Search, Source={x:Reference CfSearchRoot}}"
        ClearButtonVisibility="WhileEditing"
        TextChanged="SearchEntry_OnTextChanged"/>

</Grid>