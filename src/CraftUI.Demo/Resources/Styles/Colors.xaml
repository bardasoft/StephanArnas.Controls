<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Light -->
    
    <Color x:Key="Surface">#ffffff</Color>
    <Color x:Key="PageBackground">#efefef</Color>
    
    <Color x:Key="Primary">#10b981</Color><!-- Tailwind emerald-500 -->
    <Color x:Key="Danger">#ef4444</Color><!-- Tailwind red-500 -->
    <Color x:Key="Success">#16a34a</Color><!-- Tailwind green-600 -->
    <Color x:Key="Warning">#f59e0b</Color><!-- Tailwind amber-500 -->
    <Color x:Key="Info">#0ea5e9</Color><!-- Tailwind sky-500 -->
    
    <!-- Dark -->
    
    <Color x:Key="SurfaceDark">#191919</Color>
    <Color x:Key="PageBackgroundDark">#0d0d0d</Color>
    
    <Color x:Key="PrimaryDark">#34d399</Color><!-- Tailwind emerald-400 -->
    <Color x:Key="DangerDark">#f87171</Color><!-- Tailwind red-400 -->
    <Color x:Key="SuccessDark">#04e072</Color><!-- Tailwind green-400 -->
    <Color x:Key="WarningDark">#ffba00</Color><!-- Tailwind amber-400 -->
    <Color x:Key="InfoDark">#00bcff</Color><!-- Tailwind sky-400 -->
    
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    
    <!-- Primary Color Scale (Tailwind Emerald) -->
    
    <Color x:Key="Primary50">#ecfdf5</Color>
    <Color x:Key="Primary100">#d1fae5</Color>
    <Color x:Key="Primary200">#a7f3d0</Color>
    <Color x:Key="Primary300">#6ee7b7</Color>
    <Color x:Key="Primary400">#34d399</Color>
    <Color x:Key="Primary500">#10b981</Color>
    <Color x:Key="Primary600">#059669</Color>
    <Color x:Key="Primary700">#047857</Color>
    <Color x:Key="Primary800">#065f46</Color>
    <Color x:Key="Primary900">#064e3b</Color>
    <Color x:Key="Primary950">#022c22</Color>
    
</ResourceDictionary>